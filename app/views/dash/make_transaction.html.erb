<div class = "main-stuff">
  <h2>Make A Transaction</h2>
</div>

<div class = "transaction-form">

  <%= form_for(@transaction, url: create_transaction_path) do |f| %>
      <%- flash.each do |name, msg| -%>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
      <%- end -%>

      <div>

        <div class="form-group">
          <%= f.label :username, 'Username' %><br/>
          <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :amount, "Add Hamsterbux" %><br/>
          <%= f.text_field :amount, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Transaction Description" %><br/>
          <%= f.text_field :description, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit 'submit!', class: 'register-button btn btn-primary btn-lg' %>
        </div>
      </div>


  <% end %>
</div>

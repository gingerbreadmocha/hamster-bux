<div class = "main-stuff">
  <h2>Redeem A Coupon</h2>
</div>

<div class = "redemption-form">

  <%= form_for(@redeem_coupon, method: :patch, url: redeem_coupon_path) do |f| %>
      <%- flash.each do |name, msg| -%>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
      <%- end -%>

      <div>
        <div class="form-group">
          <%= f.label :code, "Enter coupon code" %><br/>
          <%= f.text_field :code, autofocus: true, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit 'submit!', class: 'register-button btn btn-primary btn-lg' %>
        </div>
      </div>


  <% end %>
</div>
